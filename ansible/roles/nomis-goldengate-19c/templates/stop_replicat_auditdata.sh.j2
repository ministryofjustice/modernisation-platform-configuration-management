#!/bin/bash
# GoldenGate Audit Data Replicat Stop Script
# Generated by Ansible

GGHOME={{ oracle_goldengate_home }}
REPLICAT_NAME={{ oracle_goldengate_group.auditdata.replicat_name }}

cd ${GGHOME}

echo "Stopping Replicat ${REPLICAT_NAME}..."

./ggsci << EOF
STOP REPLICAT ${REPLICAT_NAME}
INFO REPLICAT ${REPLICAT_NAME}
EXIT
EOF

if [ $? -eq 0 ]; then
    echo "Replicat ${REPLICAT_NAME} stopped successfully"
    exit 0
else
    echo "Failed to stop Replicat ${REPLICAT_NAME}"
    exit 1
fi
