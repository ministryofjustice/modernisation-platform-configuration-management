#!/bin/bash
# GoldenGate Audit Reference Extract Stop Script
# Generated by Ansible

GGHOME={{ oracle_goldengate_home }}
EXTRACT_NAME={{ oracle_goldengate_streams.auditref.extract_name }}

cd ${GGHOME}

echo "Stopping Extract ${EXTRACT_NAME}..."

./ggsci << EOF
STOP EXTRACT ${EXTRACT_NAME}
INFO EXTRACT ${EXTRACT_NAME}
EXIT
EOF

if [ $? -eq 0 ]; then
    echo "Extract ${EXTRACT_NAME} stopped successfully"
    exit 0
else
    echo "Failed to stop Extract ${EXTRACT_NAME}"
    exit 1
fi
