connect target sys/{{ database_sys_password }}@{{ primary_tns }} 
connect auxiliary sys/{{ database_sys_password }}@{{ standby_tns }}
run 
{
allocate channel drch1 device type disk;
allocate auxiliary channel ch1 device type 'SBT_TAPE' PARMS  'SBT_LIBRARY={{ database_home }}/lib/libosbws.so , ENV=(OSB_WS_PFILE={{ database_home }}/dbs/osbws.ora)';
duplicate target database for standby 
spfile
  parameter_value_convert '{{ primary_database }}', '{{ standby_database }}'
  set db_unique_name='{{ standby_uniq_name}}'
  set fal_client='{{ standby_uniq_name }}'
  set fal_server='{{ primary_uniq_name }}'
  set standby_file_management='AUTO'
  set log_archive_config='dg_config=({{ primary_database }},{{ standby_database }})'
  set log_archive_dest_1='location=use_db_recovery_file_dest valid_for=(all_logfiles,all_roles) db_unique_name={{ standby_uniq_name }}'
  set log_archive_dest_2='service={{ primary_tns }}  ASYNC valid_for=(ONLINE_LOGFILE,PRIMARY_ROLE) db_unique_name={{ primary_uniq_name }}'
nofilenamecheck;
}
