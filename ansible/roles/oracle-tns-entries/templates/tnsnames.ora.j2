{% for tns_entry in tns_entries[ env_name ] %}
{{ tns_entry.name }} =
  (DESCRIPTION =
{% for host in tns_entry.host_list %}
    (ADDRESS = (PROTOCOL = TCP)(HOST = {{ host }})(PORT = {{ tns_entry.port }}))
{% endfor %}
{% if tns_entry.host_list|length > 1 %}
    (FAILOVER = YES)
    (CONNECT_DATA =
       (SERVICE_NAME = {{ tns_entry.service_name }})
        (FAILOVER_MODE =
        (TYPE = SELECT)
        (METHOD = BASIC)
       )
     )
{% else %}
    (CONNECT_DATA =
       (SERVICE_NAME = {{ tns_entry.service_name }})
     )
{% endif %}
  )

{% endfor %}
